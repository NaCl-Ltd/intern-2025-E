<li>
  <%= gravatar_for user, size: 50 %>
  <%= link_to user.name, user %>
  
  <% if current_user.admin? && !current_user?(user) %>
    | <%= link_to t('post.delete'), user, data: { "turbo-method": :delete,
                                          turbo_confirm: "You sure?" } %>
  <% end %>
  <% if user.introduction.present? %>
    <br>
    <span class="introduction"><%= truncate(user.introduction, length: 100) %></span>
  <% end %>

  <br>
  <class="stats">
    <strong><%= user.following.count %></strong> <%= t('users.following') %> |
    <strong><%= user.followers.count %></strong> <%= t('users.followers') %>
  

</li>
