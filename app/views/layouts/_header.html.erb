<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
      <%= image_tag("kouseki_colorful.png", id: "logo_icon", alt: "Ruby logo", width: "30px") %>
      <%= link_to t('header.title'), root_path, id: "logo" %>
    </ul>
    <nav>
      <div class="navbar-header">
        <button id="hamburger" type="button" class="navbar-toggle collapsed">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>
      <ul id="navbar-menu"
          class="nav navbar-nav navbar-right">
        <li><%= link_to t('header.home'), root_path %></li>
        <li><%= link_to t('header.help'), help_path %></li>
        <li><%= link_to t('header.latest'), latest_microposts_path %></li>
        <% if logged_in? %>
          <li><%= link_to t('header.users'), users_path %></li>
          <li class="dropdown">
            <a href="#" id="account" class="dropdown-toggle">
              <%= t('header.account') %> <b class="caret"></b>
            </a>
            <ul id="dropdown-menu" class="dropdown-menu">
              <li><%= link_to t('header.profile'), current_user %></li>
              <li><%= link_to t('header.setting'), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t('header.logout'), logout_path,
                                       data: { "turbo-method": :delete } %>
              </li>
            </ul>
          </li>
          <li><%= link_to t('header.calendar'), calendar_path %></li>
          <li><%= link_to "日本語", change_locale_path(:ja), method: :post %></li>
          <li><%= link_to "English", change_locale_path(:en), method: :post %><li>
        <% else %>
          <li><%= link_to t('header.login'), login_path %></li>
          <li><%= link_to "日本語", change_locale_path(:ja), method: :post %></li>
          <li><%= link_to "English", change_locale_path(:en), method: :post %><li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
