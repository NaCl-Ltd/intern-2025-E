<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>

      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>


      <!-- Daily Prompt Section -->
      <section class="daily_prompt_section">
        <h4><%= t('post.daily_prompt') %></h4>
        <div class="daily_prompt_question mb-3">
          <strong><%= @daily_prompt[I18n.locale.to_s] %></strong>
        </div>

        <!-- NEW: Daily Prompt Answer Form -->
        <%= form_with(model: @micropost, local: true, class: "daily_prompt_form") do |f| %>
          <%= f.hidden_field :daily_prompt_id, value: @daily_prompt.id %>
          <div class="form-group">
            <%= f.text_area :content, 
                placeholder: t('post.answer_daily_prompt'), 
                class: "form-control",
                rows: 3 %>
          </div>
          <div class="form-group">
            <%= f.file_field :image, class: "form-control" %>
          </div>
          <%= f.submit t('post.answer_prompt'), class: "btn btn-primary btn-sm" %>
        <% end %>
      </section>
      

    </aside>
    <div class="col-md-8">

      <h3><%= t('post.feed') %></h3>

      <!-- show pinned post first if it exists -->
      <% if @pinned_micropost %>
        <div class="pinned-post-container mb-4">
          <h5 class="text-muted mb-2">ðŸ“Œ <%= t('post.pinned_post') %></h5>
          <ol class="microposts list-unstyled">
            <%= render @pinned_micropost %>
          </ol>
        </div>
        <hr>
      <% end %>

      <!-- show regular feed -->
      <% if @feed_items.any? %>
        <ol class="microposts list-unstyled">
          <%= render @feed_items %>
        </ol>
        <%= will_paginate @feed_items %>
      <% else %>
        <p>No posts to show. Start following some users!</p>
      <% end %>

    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1><%= t('home.title') %></h1>

    <h2>
      <%= t('home.text1') %>
      <a href="https://railstutorial.jp/"><%= t('home.text2') %></a>
      <%= t('home.text3') %>
    </h2>

    <%= link_to t('home.signup'), signup_path, class: "btn btn-lg btn-primary" %>
  </div>

  <%= link_to image_tag("rails.svg", alt: "Rails logo", width: "200px"),
              "https://rubyonrails.org/" %>
<% end %>
